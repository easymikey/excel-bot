{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "strict": true,
    "isolatedModules": true,
    "declaration": false
  },
  "lib": ["es2015"],
  "include": ["src"]
}
